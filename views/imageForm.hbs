<div class="row justify-content-between ">
     <div class="card col-md-4 p-4">
          {{#if error}}
               <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          <form action="/images" method="POST" enctype="multipart/form-data">
               <div class="form-group">
                    <input type="text" name="title" class="form-control" id="title" 
                         placeholder="Image Title" required>
               </div>
               <div class="form-group">
                    <textarea name="description" class="form-control" id="description" placeholder="Image Description" required></textarea>
               </div>
               <div class="form-group">
                    <input  type="file" name="image" class="form-control" id="image" required></input>
               </div>
               <button type="submit" class="btn btn-primary">Upload Photo</button>
          </form>
     </div>
     <div class="card col-md-8 p-4">
          <table class="table">
               <thead>
                    <tr>
                         <th>Title</th>
                         <th>Description</th>
                         <th>Image</th>
                    </tr>
               </thead>
               <tbody>
                    {{#each photos}}
                         {{#each this}}
                              {{#if imageURL}}
                                   <tr>
                                        <td>{{title}}</td>
                                        <td>{{description}}</td>
                                        <td>
                                             <div class="btn-group btn-sm">
                                                  <a href={{imageURL}} target="_blank" class="btn btn-sm btn-success btn-sm">View</a>
                                                  <a href="/images/{{_id}}/delete"  class="btn btn-sm btn-danger">Delete</a>
                                             </div>
                                        </td>
                                   </tr>
                              {{/if}}
                         {{/each}}
                    {{/each}}
                    

                   
               </tbody>
          </table>
     </div>
</div>
